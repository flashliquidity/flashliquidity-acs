{
  "name": "flashliquidity-acs",
  "version": "0.0.4",
  "license": "MIT",
  "repository": "https://github.com/flashliquidity/flashliquidity-acs.git",
  "scripts": {
    "setup": "yarn && forge install",
    "compile": "forge build",
    "test": "forge test",
    "coverage": "forge coverage",
    "gas-report": "forge snapshot --gas-report",
    "slither": "slither .",
    "lint": "solhint 'contracts/*.sol'",
    "lint-fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "forge fmt contracts/**/*.sol && forge fmt test/**/*.sol",
    "format-check": "forge fmt --check"
  },
  "devDependencies": {
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
